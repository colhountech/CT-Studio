@page "{id:Guid}"
@model TasksWebApp.Pages.EditModel

<div class="d-flex">
    <div class="flex-grow-1"><h2>ToDo</h2></div>
    <div><a asp-page="Index" class="btn btn-info m-2 pull-right">« Back </a></div>
</div>
<form asp-action="Edit">

    <div class="card">
        <div asp-validation-summary="ModelOnly" class="text-danger alert alert-danger "></div>
    </div>

    <input type="hidden" asp-for="TodoItem.ID" />

    <div class="card shadow">
        <div class="card-header ">
            <h3 class="card-title">Edit Item</h3>
        </div>
        <div class="card-body ">
            <div class="form-group">
                <label asp-for="TodoItem.Title" class="control-label"></label>
                <input asp-for="TodoItem.Title" class="form-control" />
                <span asp-validation-for="TodoItem.Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TodoItem.Description" class="control-label"></label>
                <input asp-for="TodoItem.Description" class="form-control" />
                <span asp-validation-for="TodoItem.Description" class="text-danger"></span>
            </div>

        </div>
        <div class="card-footer bg-light d-flex justify-content-end">
            <input type="submit" value="Save" class=" card-link btn btn-success" />
            <a asp-page="Index" class="card-link btn btn-outline-danger">Cancel</a>
        </div>
    </div>
</form>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

